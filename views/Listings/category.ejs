<% layout("/layouts/boilerplate.ejs") %>

<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <h1><%= category %></h1>
    </div>
    
   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" >
        <%for(let listing of allListings){ %>
            <a href="http://localhost:8080/listings/<%= listing._id %>" class="listing-link">
                <div class="card cols listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height:20rem ;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"><b><%= listing.title %></b><br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %> / night 
                        </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
</body>
</html>